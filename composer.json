{
    "autoload": {
        "psr-4": {
            "Pathway\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^13.0",
        "mockery/mockery": "^1.6",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ],
        "phpunit": "phpunit",
        "phpstan": "phpstan",
        "phpcs": [
            "@phpcs.src",
            "@phpcs.tests"
        ],
        "phpcs.src": "phpcs src --standard=phpcs.src.xml",
        "phpcs.tests": "phpcs tests --standard=phpcs.tests.xml"
    }
}
